<ifModule mod_rewrite.c>
    RewriteEngine On  

    RewriteBase /

    # Remove file extension
    RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.(php|html) [NC]
    RewriteRule ^ %1/ [R,L]
    
    # Add '/'end URL
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_URI} !/$
    RewriteRule . %{REQUEST_URI}/ [L,R=301]

    # Send requests to routing page
    RewriteCond %{REQUEST_FILENAME} !-f 
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule "^public\/(.+)?\/$" /public/$1 [NC,L]

    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule "^controller\/(.+)?\/$" /controllers/$1.php [NC,L]
    
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule "^(.+)?$" /router.php?route=$1 [NC,L]
</ifModule>